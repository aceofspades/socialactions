<%= link_to 'New Site', new_site_path %>
<table cellpadding="3">
  <tr>
  	<td><strong>Name</strong></td>
  </tr>

<% for site in @sites %>
  <tr>
    <td><%= link_to site.name, edit_site_path(site) %></td>
    <td><%= link_to 'Destroy', site, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

