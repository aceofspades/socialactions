#search_basic.search_box
  - form_for @search, :url => actions_path, :html => {:method => :get} do |f|
    Search Term:
    = text_field_tag :q, @search.q, :size => 22, :id => 'q_basic'
    &nbsp;
    = submit_tag 'Search'
  = link_to_function('Advanced search...', '$("#q_advanced").val($("#q_basic").val()); $("#search_advanced").toggle(); $("#search_basic").toggle();')

#search_advanced.search_box{:style => 'display: none;'}
  #firstrow
    %h2 Find an Action
    = link_to_function('Basic search...', '$("#q_basic").val($("#q_advanced").val()); $("#search_advanced").toggle(); $("#search_basic").toggle();')

  - form_for @search, :url => actions_path, :html => {:method => :get} do |f|

    %table{ :border=>"0", :cellpadding=>"0", :cellspacing=>"0" }
      %tr.first
        %td Search Term:
        %td= text_field_tag :q, @search.q, {:size => 22, :id => 'q_advanced'}
        
        %td
          = submit_tag 'Search'
          &nbsp;
          = submit_tag 'Google Map', :onclick => "$('#new_search').attr('action', '#{map_index_path}')"
          &nbsp;
          = submit_tag 'Tag Cloud', :onclick => "$('#new_search').attr('action', '#{tags_path}')"
          &nbsp;
          = submit_tag 'Random', :onclick => "$('#new_search').attr('action', '#{random_path}')"
      %tr
        %td Type of Action:
        %td= select_tag :action_type, options_for_select(options_for_action_type_select, @search.action_type)
        %td
          Created:
          = select_tag :created, options_for_select(options_for_created_select, @search.created)
  
    - Site.find(:all, :order => :name).each_slice(5) do |sites|
      .platform_select
        - sites.each do |site|
          = check_box_tag 'sites[]', site.id, @search.has_site?(site)
          = site.name
          %br/
          
  %br{:clear => 'all'}/
  