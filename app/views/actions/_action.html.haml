%div[action]
  = link_to action.title, action_path(action), :class => 'action-title'
  
  .action-description
    = sanitize(action.description)
  .action-details
    %span.action-type= action.action_type.name
    created
    %span.action-created= action.created_at.to_s(:default)
    on
    = link_to action.site.name, action.site.url
  -# = link_to action.url, action.url, :class => 'action-url'
